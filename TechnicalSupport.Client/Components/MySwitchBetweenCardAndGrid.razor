<RadzenColumn SizeXS="12" SizeMD="3" Visible="ShowSwitchBetweenCardAndGrid">
    <RadzenButton Text="@(IsGridView ? MyText.gridView : MyText.cardView)"
                  Click="ToggleView"
                  ButtonStyle="ButtonStyle.Primary"
                  Style="width:100%" />
</RadzenColumn>

@code {

    #region Parameters

    [Parameter]
    public bool ShowSwitchBetweenCardAndGrid { get; set; } = true;

    [Parameter]
    public bool IsGridView { get; set; }

    [Parameter]
    public EventCallback ToggleView { get; set; }

    #endregion

    #region LifeCycleMethods

    protected async override Task OnInitializedAsync() => MyText = await I18nText.GetTextTableAsync<I18nText.MyText>(this);

    #endregion

    #region variables

    private I18nText.MyText MyText = new();

    #endregion
}
